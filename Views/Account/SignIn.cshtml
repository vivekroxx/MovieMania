@model LoginViewModel

@{
    Layout = "_Layout.Unauthenticated";
    ViewData["Title"] = "Login";
}

<div class="card mx-auto">
    <div class="card-header">
        <h4>Login</h4>
    </div>
    <div class="card-body">
        <form asp-controller="Account" asp-action="SignIn" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4 w-100">Login</button>
        </form>

        <a class="nav-link text-center" asp-controller="Account" asp-action="SignUp">Create New Account</a>
    </div>
</div>
