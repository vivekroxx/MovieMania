@model MoviesModel
@{
    ViewData["Title"] = "Movie Detail";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-7">
                <img class="card-img-top" style="object-fit:fill; max-width: 50vh; max-height: 50vh;"
                     src="https://spectrum-ent.com/wp-content/uploads/2020/07/epic-movie.jpg" asp-append-version="true">
            </div>
            <div class="col-md-4">
                <h5 class="card-title"><span>Movie</span> : @Model.Name</h5>
                <h5 class="card-title">Author : @Model.Author</h5>
                <h5 class="card-title">Movie Duration : @Model.Duration</h5>
                <h5 class="card-title">Release Date : @Model.ReleaseDate</h5>
                <div class="mt-auto">
                    <a href="#" class="btn btn-primary my-1 d-block">Add to Favourite</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary d-block">Go Back</a>
                </div>
            </div>
        </div>
