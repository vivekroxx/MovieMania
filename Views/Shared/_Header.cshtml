<header style="position: sticky; top: 0; z-index: 100;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="javascript:void(0)">MovieMania</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movie" asp-action="Create">Add Movie</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="javascript:void(0)" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/image/avatar/admin.jpg" style="max-height: 40px; border-radius: 3px;" asp-append-version="true" />
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="d-flex justify-content-between align-items-start">
                                    <img src="~/image/avatar/admin.jpg" class="img-fluid" style="height: 60px; border-radius: 3px; margin-right: 2px;" asp-append-version="true" />
                                    <div class="p-1">
                                        <p class="fw-bold m-0">User Name</p>
                                        <p class="text-muted m-0">@User.Identity?.Name</p>
                                    </div>
                                    <hr />
                                </li>
                                <li>
                                    <a asp-action="ChangePassword" asp-controller="Account" class="dropdown-item">Change Password</a>
                                </li>
                                <li>
                                    <form asp-controller="Account" asp-action="LogOut" method="post">
                                        <button type="submit" class="dropdown-item">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-action="Login" asp-controller="Account" class="dropdown-item">Login</a>
                                </li>
                                <li>
                                    <a asp-action="Register" asp-controller="Account" class="dropdown-item">Register</a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>